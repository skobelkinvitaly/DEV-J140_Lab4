<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="20.0" stylesheets="@style1.css" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.lab4.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Write some text here:"/>
    <TextArea fx:id="textArea"></TextArea>
    <FlowPane hgap="20" alignment="CENTER">
        <Button text="CSS" onAction="#onCSSButtonClick"/>
        <Button text="Save" onAction="#onSaveButtonClick"/>
        <Button text="Open" onAction="#onOpenButtonClick"/>
        <Button text="Clear" onAction="#onClearButtonClick"/>
    </FlowPane>
</VBox>
